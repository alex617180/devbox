# общие для всех проектов
HOST_PROJECTS_DIR=../          # папка, где лежат все проекты (монтируется целиком)

# Какой workspace использовать по умолчанию скриптам (можно переопределить DEVBOX_PHP=74 при вызове)
# 83 | 74
DEFAULT_PHP=83

# Теги образов (опционально, иначе используются дефолты 8.3-cli/7.4-cli)
#PHP83_TAG=8.3-cli
#PHP74_TAG=7.4-cli

# MySQL единый для всех
DB_USERNAME=laravel
DB_PASSWORD=secret
DB_ROOT_PASSWORD=root          # для создания БД
# (DB_DATABASE задавай в .env КАЖДОГО проекта, чтобы не смешивать таблицы)

# Порты
MYSQL_PORT=3306

# Диапазоны публикации портов для каждого workspace (должны не пересекаться)
# Laravel serve / php -S
APP_PORT_RANGE_83=28080-28120
APP_PORT_RANGE_74=28200-28240
# Vite
VITE_PORT_RANGE_83=28130-28180
VITE_PORT_RANGE_74=28250-28290

# (опционально) фиксированные порты внутри диапазонов; если заданы — скрипты будут
# использовать их вместо автоподбора. Значения должны входить в соответствующий RANGE.
#APP_PORT_83=28080
#VITE_PORT_83=28130
#APP_PORT_74=28200
#VITE_PORT_74=28250

# Xdebug
XDEBUG_MODE=debug
DOCKER_HOST_GATEWAY=host-gateway
